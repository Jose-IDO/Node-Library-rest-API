{
  "info": {
    "name": "Library API",
    "description": "RESTful API for managing a library system with authors and books",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authors",
      "item": [
        {
          "name": "Create Author",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Author\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/authors",
              "host": ["{{baseUrl}}"],
              "path": ["authors"]
            }
          }
        },
        {
          "name": "Get All Authors",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/authors",
              "host": ["{{baseUrl}}"],
              "path": ["authors"]
            }
          }
        },
        {
          "name": "Get All Authors (with search)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/authors?search=rowling",
              "host": ["{{baseUrl}}"],
              "path": ["authors"],
              "query": [
                {
                  "key": "search",
                  "value": "rowling"
                }
              ]
            }
          }
        },
        {
          "name": "Get All Authors (with pagination)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/authors?page=1&limit=2",
              "host": ["{{baseUrl}}"],
              "path": ["authors"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "2"
                }
              ]
            }
          }
        },
        {
          "name": "Get Author by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/authors/1",
              "host": ["{{baseUrl}}"],
              "path": ["authors", "1"]
            }
          }
        },
        {
          "name": "Update Author",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Author Name\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/authors/1",
              "host": ["{{baseUrl}}"],
              "path": ["authors", "1"]
            }
          }
        },
        {
          "name": "Get Author's Books",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/authors/1/books",
              "host": ["{{baseUrl}}"],
              "path": ["authors", "1", "books"]
            }
          }
        },
        {
          "name": "Delete Author",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/authors/1",
              "host": ["{{baseUrl}}"],
              "path": ["authors", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Books",
      "item": [
        {
          "name": "Create Book",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Test Book\",\n  \"authorId\": 1,\n  \"year\": 2023\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/books",
              "host": ["{{baseUrl}}"],
              "path": ["books"]
            }
          }
        },
        {
          "name": "Get All Books",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/books",
              "host": ["{{baseUrl}}"],
              "path": ["books"]
            }
          }
        },
        {
          "name": "Search Books by Title",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/books?search=harry",
              "host": ["{{baseUrl}}"],
              "path": ["books"],
              "query": [
                {
                  "key": "search",
                  "value": "harry"
                }
              ]
            }
          }
        },
        {
          "name": "Filter Books by Author",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/books?author=1",
              "host": ["{{baseUrl}}"],
              "path": ["books"],
              "query": [
                {
                  "key": "author",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Filter Books by Year",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/books?year=1997",
              "host": ["{{baseUrl}}"],
              "path": ["books"],
              "query": [
                {
                  "key": "year",
                  "value": "1997"
                }
              ]
            }
          }
        },
        {
          "name": "Sort Books by Title",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/books?sort=title",
              "host": ["{{baseUrl}}"],
              "path": ["books"],
              "query": [
                {
                  "key": "sort",
                  "value": "title"
                }
              ]
            }
          }
        },
        {
          "name": "Get Books with Pagination",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/books?page=1&limit=3",
              "host": ["{{baseUrl}}"],
              "path": ["books"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "3"
                }
              ]
            }
          }
        },
        {
          "name": "Get Book by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/books/1",
              "host": ["{{baseUrl}}"],
              "path": ["books", "1"]
            }
          }
        },
        {
          "name": "Update Book",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Book Title\",\n  \"authorId\": 1,\n  \"year\": 2024\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/books/1",
              "host": ["{{baseUrl}}"],
              "path": ["books", "1"]
            }
          }
        },
        {
          "name": "Delete Book",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/books/1",
              "host": ["{{baseUrl}}"],
              "path": ["books", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Error Testing",
      "item": [
        {
          "name": "Create Author - Missing Name",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}"
            },
            "url": {
              "raw": "{{baseUrl}}/authors",
              "host": ["{{baseUrl}}"],
              "path": ["authors"]
            }
          }
        },
        {
          "name": "Create Book - Invalid Author",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Test Book\",\n  \"authorId\": 999,\n  \"year\": 2023\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/books",
              "host": ["{{baseUrl}}"],
              "path": ["books"]
            }
          }
        },
        {
          "name": "Get Non-existent Author",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/authors/999",
              "host": ["{{baseUrl}}"],
              "path": ["authors", "999"]
            }
          }
        },
        {
          "name": "Get Non-existent Book",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/books/999",
              "host": ["{{baseUrl}}"],
              "path": ["books", "999"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    }
  ]
}
